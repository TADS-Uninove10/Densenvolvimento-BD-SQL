    SELECT * FROM CLIENTE;


--1)
    SELECT NOME, ENDERECO, CEP FROM CLIENTE WHERE
       FATURAMENTO > 20000000;
--2)

    SELECT * FROM CLIENTE WHERE IDCLIENTE IN (123,124,125,128,129);
--3)
    SELECT NOME, (FATURAMENTO *1/100) PROLABORE FROM
        CLIENTE  WHERE (FATURAMENTO *1/100) > 200000.00
        ORDER BY NOME DESC;
