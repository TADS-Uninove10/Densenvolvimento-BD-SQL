CREATE TABLE CLIENTE(
    IDCLIENTE NUMBER(5),
    NOME VARCHAR2(40),
    ENDERECO VARCHAR2(40),
    CEP VARCHAR2(20),
    DTFUNDA DATE,
    TOTEMP NUMBER(5),
    FATURAMENTO NUMBER(10,2),
    CONSTRAINTS CLIENT_PK PRIMARY KEY(IDCLIENTE));

